*		INCLUDE PATHS					 *
******************************************/
#include "Std_Types.h"
#include "I2cH.h"
/*****************************************
*		END OF INCLUDE PATHS		     *
******************************************/
/*****************************************
*		DEFINES					 		 *
******************************************/
/*****************************************
* 		END OF DEFINES					 *
******************************************/
/*****************************************
*		VARIABLES					 	 *
******************************************/
/*****************************************
*		END OF VARIABLES				 *
******************************************/
/*****************************************
*		FUNCTIONS				 		 *
******************************************/
/* Function declaration for I2C LCD driver initialization. */
EXTERN VOID lcd_init(VOID);
/* Function declaration for command transmitting. */
EXTERN VOID lcd_send_cmd (char cmd);
/* Function declaration for data transmitting. */
EXTERN VOID lcd_send_data (char data);
/* Function declaration for string transmitting. */
EXTERN VOID lcd_send_string (char *str);
/* Function declaration for setting the position on the LCD. */
EXTERN VOID lcd_put_cur(int row, int col);
