#define SYSTEM_MANAGER_POSITION_NMI_RESET					8
#define SYSTEM_MANAGER_POSITION_MEMORY_FAULT_RESET 			9
#define SYSTEM_MANAGER_POSITION_USAGE_FAULT_RESET			10
#define SYSTEM_MANAGER_POSITION_BUS_FAULT_RESET				11
#define SYSTEM_MANAGER_POSITION_STACK_OVERFLOW_RESET		12
#define	SYSTEM_MANAGER_POSITION_MALLOC_FAILED_RESET			13
#define SYSTEM_MANAGER_POSITION_PVD_RESET					14
