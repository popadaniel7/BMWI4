#include "Std_Types.h"
#include "EcuM_Types.h"

#define ECUM_WAKEUPSOURCE_POR 						0x0010
#define ECUM_WAKEUPSOURCE_BOR 						0x0011
#define ECUM_WAKEUPSOURCE_SOFTWARE_RESET			0x0012
#define ECUM_WAKEUPSOURCE_WINDOWED_WATCHDOG_RESET	0x0013
#define ECUM_WAKEUPSOURCE_LOWPOWER_RESET			0x0014
#define ECUM_WAKEUPSOURCE_BUTTON_RESET				0x0015

EXTERN EcuM_StateType EcuM_GlobalState;

EXTERN StdReturnType EcuM_DriverInit();
EXTERN StdReturnType EcuM_DriverDeInit();
EXTERN StdReturnType EcuM_ValidatedWakeup();
EXTERN void EcuM_MainFunction();
EXTERN void EcuM_SetWakeupSource(uint8 wakeupSource);
EXTERN void EcuM_ClearWakeupSource();
EXTERN void EcuM_ProcessWakeupEvent();
EXTERN void EcuM_CheckForWakeupEvent();
