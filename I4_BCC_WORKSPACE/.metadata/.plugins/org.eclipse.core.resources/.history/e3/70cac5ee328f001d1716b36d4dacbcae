#include "Std_Types.h"

#define BtcRxCenLocOn 				0x001
#define BtcRxCenLocOff 				0x002
#define BtcRxHighBeamOn 			0x003
#define BtcRxHighBeamOff 			0x004
#define BtcRxFlashHighBeamOn 		0x005
#define BtcRxFlashHighBeamOff 		0x006
#define BtcRxTurnSignalLeftOn 		0x007
#define BtcRxTurnSignalLeftOff 		0x008
#define BtcRxTurnSignalRightOn 		0x009
#define BtcRxTurnSignalRightOff 	0x010
#define BtcRxHazardLightOn 			0x011
#define BtcRxHazardLightOff 		0x012
#define BtcRxFogLightFrontOn 		0x013
#define BtcRxFogLightFrontOff 		0x014
#define BtcRxFogLightRearOn 		0x015
#define BtcRxFogLightRearOff 		0x016
#define BtcRxBrakeLightsOn 			0x017
#define BtcRxBrakeLightsOff 		0x018
#define BtcRxInteriorLightsOn 		0x019
#define BtcRxInteriorLightsOff 		0x020
#define BtcRxAutomaticLightsOn		0x040
#define BtcRxPositionLightsOn		0x041
#define BtcRxNightTimeLightsOn		0x042

EXTERN uint8 BtcReceivedDataOnBluetooth;
EXTERN uint8 BtcReceivedDataIRQ;

EXTERN void BtcMainFunction();
EXTERN StdReturnType BtcInit();
