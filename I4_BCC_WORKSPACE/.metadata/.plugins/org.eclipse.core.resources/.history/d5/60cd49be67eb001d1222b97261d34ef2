******************************************/
/*****************************************
*		DEFINES					 		 *
******************************************/
#define FEE_EEPROM_START_ADDRESS 	0x080E0000
#define FEE_EEPROM_SIZE 			2048
/*****************************************
* 		END OF DEFINES					 *
******************************************/
/*****************************************
*		VARIABLES					 	 *
******************************************/
EXTERN uint32 Fee_BswState;
/*****************************************
*		END OF VARIABLES				 *
******************************************/
/*****************************************
*		FUNCTIONS				 		 *
******************************************/
/* Function declaration for initialization. */
EXTERN StdReturnType Fee_Init();
/* Function declaration for de-initialization. */
EXTERN StdReturnType Fee_DeInit();
/* Function declaration for the main function. */
EXTERN VOID Fee_MainFunction();
/* Function declaration for writing into memory. */
EXTERN StdReturnType Fee_Write(uint16_t address, uint8_t *data, uint16_t size);
/* Function declaration for reading from memory. */
EXTERN StdReturnType Fee_Read(uint16_t address, uint8_t *data, uint16_t size);
