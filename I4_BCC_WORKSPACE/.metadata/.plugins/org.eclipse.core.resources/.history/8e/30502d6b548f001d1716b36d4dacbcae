EXTERN uint8 Pdc_RearRxDelay;
EXTERN uint8 Pdc_RearEchoFirstTimeStampValue;
EXTERN uint8 Pdc_RearEchoSecondTimeStampValue;
EXTERN uint8 Pdc_RearDistanceValue;
EXTERN uint8 Pdc_RearBuzzerDistanceToPWMValue;

